<config>
    <modules>
        <Symmetrics_SetMeta>
            <version>0.2.25</version>
        </Symmetrics_SetMeta>
    </modules>
    <global>
        <models>
            <setmeta>
                <class>Symmetrics_SetMeta_Model</class>
            </setmeta>
        </models>
        <helpers>
            <setmeta>
                <class>Symmetrics_SetMeta_Helper</class>
            </setmeta>
        </helpers>
        <events>
            <catalog_product_save_before>
                <observers>
                    <symmetrics_setmeta_model_observer>
                        <type>singleton</type>
                        <class>Symmetrics_SetMeta_Model_Observer</class>
                        <method>handleProductSaveBefore</method>
                    </symmetrics_setmeta_model_observer>
                </observers>
            </catalog_product_save_before>
            <!-- Event for mass editing products. Disabled, doesn't work since CE 1.5. -->
            <!--
             <controller_action_postdispatch_adminhtml_catalog_product_action_attribute_save>
                <observers>
                    <symmetrics_setmeta_model_observer>
                        <type>singleton</type>
                        <class>Symmetrics_SetMeta_Model_Observer</class>
                        <method>handleProductMassEdit</method>
                    </symmetrics_setmeta_model_observer>
                </observers>
            </controller_action_postdispatch_adminhtml_catalog_product_action_attribute_save>
            -->
        </events>
        <resources>
            <setmeta_setup>
                <setup>
                    <module>Symmetrics_SetMeta</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </setmeta_setup>
        </resources>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Symmetrics_SetMeta>
                    <files>
                        <default>Symmetrics_SetMeta.csv</default>
                    </files>
                </Symmetrics_SetMeta>
            </modules>
        </translate>
    </adminhtml>
</config>
