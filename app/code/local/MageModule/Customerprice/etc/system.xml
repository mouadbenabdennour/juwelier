<?xml version="1.0"?>
<config>
    <sections>
        <customer_price translate="label">
            <label>Customerprice</label>
            <tab>customer</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>

            <groups>
                <customer translate="label">
                    <label>Customer</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <verified_default translate="label">
                            <label>Customer Price - Verified Default</label>
							<comment>Specifies what the default value for a newly created customers should be</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </verified_default>
                    </fields>
                </customer>
                <product translate="label">
                    <label>Product</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1001</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <discountable_default translate="label">
                            <label>Customer Price - Enabled for Discount</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
							<comment>Specifies what the default value for newly created products should be. This Discount will only be applied on the standard price.</comment>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </discountable_default>
					</fields>
				</product>
				<price_sorting_order translate="label">
                    <label>Price Sorting Order</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1002</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable_sort_prices translate="label">
                            <label>Activate price sorting</label>
                            <comment>Instead of apply the cheapest price, a price sorting can be set up. First price which is valid for customer, the price sorting will stop and apply that price.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_sort_prices>
                        <sort_price_1 translate="label">
                            <label>1. Price in sorting</label>
                            <frontend_type>select</frontend_type>
                            <source_model>MageModule_Customerprice_Model_AdminSourcePrices</source_model>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </sort_price_1>
                        <sort_price_2 translate="label">
                            <label>2. Price in sorting</label>
                            <frontend_type>select</frontend_type>
                            <source_model>MageModule_Customerprice_Model_AdminSourcePrices</source_model>
                            <sort_order>22</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </sort_price_2>
                        <sort_price_3 translate="label">
                            <label>3. Price in sorting</label>
                            <frontend_type>select</frontend_type>
                            <source_model>MageModule_Customerprice_Model_AdminSourcePrices</source_model>
                            <sort_order>33</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </sort_price_3>
                        <sort_price_4 translate="label">
                            <label>4. Price in sorting</label>
                            <frontend_type>select</frontend_type>
                            <source_model>MageModule_Customerprice_Model_AdminSourcePrices</source_model>
                            <sort_order>44</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </sort_price_4>
                        <sort_price_5 translate="label">
                            <label>5. Price in sorting</label>
                            <frontend_type>select</frontend_type>
                            <source_model>MageModule_Customerprice_Model_AdminSourcePrices</source_model>
                            <sort_order>55</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </sort_price_5>
                    </fields>
                </price_sorting_order>
            </groups>
        </customer_price>

        <customer translate="label" module="core">
            <frontend_type>text</frontend_type>
            <sort_order>920</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <customer_id translate="label">
                    <label>Customer Id</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1001</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    <!--
                        <enabled translate="label">
                            <label>Enabled</label>
                            <comment><![CDATA[- <b>Hide</b> the Field <b>State / Province</b> in the Frontend? <br /> - Das Feld <b>Bundesland</b> im Frontend <b>verstecken</b>?]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                    -->
                        <auto_increment translate="label">
                            <label>Active automatic set for customer id</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Basic setting for the following settings.]]></comment>
                        </auto_increment>

                        <id_template translate="label">
                            <label>Template for customer id</label>
                            <comment><![CDATA[%d will replaced with the customer id. For example, CID-%d will be displayed to CID-1. With %04d the customer id can be added will 0. Example, CID-%04d will be displayed to CID-0001]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </id_template>

                        <template_force_apply translate="label">
                            <label>Apply template also to already existing id's</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>26</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[When you chose yes here the system tries to convert existing ids into a number and apply the template (in some cases this might cause problems or is impossible).]]></comment>
                        </template_force_apply>

                        <next_increment translate="label">
                            <label>Next number</label>
                            <comment><![CDATA[The number, which will be assigned to the next registered customer. This will be count up automatically.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>validate-digits</validate>
                        </next_increment>
                    </fields>
                </customer_id>
            </groups>
        </customer>
    </sections>
</config>
