<config>
    <modules>
        <Symmetrics_DomPdf>
            <version>0.6.0</version>
        </Symmetrics_DomPdf>
    </modules>
    <global>
        <resources>
            <dompdf_setup>
                <setup>
                    <module>Symmetrics_DomPdf</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </dompdf_setup>
            <dompdf_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </dompdf_write>
            <dompdf_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </dompdf_read>
        </resources>
        <helpers>
            <dompdf>
                <class>Symmetrics_DomPdf_Helper</class>
            </dompdf>
        </helpers>
    </global>
</config>